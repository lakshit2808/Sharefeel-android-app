<LoginScreen>:
    GridLayout:
        cols: 1

        GridLayout:
            cols: 1
            padding: 16,16
            spacing: 22,22
            
            Label:
                text: "User Login"
                font_size: '24sp'
 
            TextInput:
                id: username
                hint_text: "username"
                
            TextInput:
                id: password
                hint_text: "Password"
                password: True

            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text ,root.ids.password.text)
                    size_hint: 0.3 , 0.7
                    pos_hint: {'center_x': 0.5 , 'center_y':0.6}
            
            Label:
                id: wrong
                text: ""
        
        GridLayout:
            cols: 2
            size_hint: 0.2 , 0.2
            padding: 10,10
            spacing :10,0

            Button:
                text: "Sign Up"
                on_press: root.signup()
                size_hint: 0.2 , 0.8
                background_color: 1,1,1,0
                color: 1 , 0.7 , 0.1,1
                opacity: 1 if self.state == 'normal' else 0.5


<SignUpScreen>:
    GridLayout:
        cols: 1
        size_hint: 1,1
        padding: 1,1

        Label:
            text: "Sign Up Here"

        TextInput:
            id: email
            hint_text: "E-Mail Id"
            size_hint: 0.5,0.5

        TextInput:
            id: username
            hint_text: "username"
            size_hint: 0.5,0.5
        
        TextInput:
            id: password
            hint_text: "Password"
            size_hint: 0.5,0.5

        Button: 
            text: "Submit"
            on_press: root.add_user(root.ids.email.text,root.ids.username.text,root.ids.password.text)
            size_hint: 0.5,0.5
  
  
<SignUpScreenCmplt>
    GridLayout:
        cols: 1
        Label:
            text: "Your Account has been Successfully Created"
        Button:
            text: "Click Here to Login"
            on_press: root.home()


<LoginScreenCmplt>
    GridLayout:
        cols: 1
        padding: 30 ,30
        spacing: 30,30

        RelativeLayout:
            ImageButton:
                on_press: root.logout()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35 , 0.35
                pos_hint: {'center_x': 0.93 , 'center_y': 0.8}

        Label: 
            text: "Share your Feelinga :)"
        TextInput:
            id: feeling
            hint_text: "i.e Happy , Sad , Unloved"
        
        Button:
            text: "Tap Here"
            on_press: root.take_quote(root.ids.feeling.text)

        ScrollView:
        
            Label:
                id: quotez
                text: ""
                text_size: self.width , None
                size_hint_y: None
                height: self.texture_size[1]


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenCmplt:
        name: "sign_up_screen_cmplt"
    LoginScreenCmplt:
        name: "login_screen_cmplt"

 